#! /bin/bash

cd /etc/sysconfig/
cat > ifconfig.eth0 <<EOF
ONBOOT=yes
IFACE=eth0
SERVICE="ipv4-static"
IP=${XLAPP_HOST_IP}
GATEWAY=${XLAPP_HOST_GW}
PREFIX=${XLAPP_HOST_PREFIX}
BROADCAST=${XLAPP_HOST_BROADCAST}
EOF

cat > /etc/resolv.conf <<EOF
# Begin /etc/resolv.conf

domain ${XLAPP_DNS_DOMAIN_NAME}
nameserver ${XLAPP_DNS_NS_1}
nameserver ${XLAPP_DNS_NS_2}

# End /etc/resolv.conf
EOF
